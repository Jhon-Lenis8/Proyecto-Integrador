<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.RegistroUsuarioController"
            stylesheets="@../style.css">
  <center>
    <VBox alignment="CENTER" spacing="12" BorderPane.alignment="CENTER">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>
      <children>
        <Label text="Registro de Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox spacing="10">
          <children>
            <Label text="Identificación:"/>
            <TextField fx:id="txtIdentificacion" prefWidth="200"/>
          </children>
        </HBox>
        <HBox spacing="10">
          <children>
            <Label text="Contraseña:"/>
            <PasswordField fx:id="txtContrasena" prefWidth="200"/>
          </children>
        </HBox>
        <HBox spacing="10">
          <children>
            <Label text="Nombre:"/>
            <TextField fx:id="txtNombre" prefWidth="200"/>
          </children>
        </HBox>
        <HBox spacing="10">
          <children>
            <Label text="Apellido:"/>
            <TextField fx:id="txtApellido" prefWidth="200"/>
          </children>
        </HBox>
        <HBox spacing="10">
          <children>
            <Label text="Correo electrónico:"/>
            <TextField fx:id="txtCorreo" prefWidth="200"/>
          </children>
        </HBox>
        <HBox spacing="10">
          <children>
            <Label text="Tipo de usuario:"/>
            <ComboBox fx:id="comboTipo" prefWidth="200"/>
          </children>
        </HBox>
        <HBox spacing="20" alignment="CENTER">
          <children>
            <Button fx:id="btnRegistrar" text="Registrar usuario"/>
            <Button fx:id="btnMenuPrincipal" text="Menú principal" onAction="#irAlMenuPrincipal"/>
          </children>
        </HBox>
      </children>
    </VBox>
  </center>
</BorderPane>
